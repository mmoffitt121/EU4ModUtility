<Window x:Class="EU4ModUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EU4ModUtil"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Mod">
                <Grid Background="#FFE5E5E5">
                    <Label Content="No Mod Selected" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Width="774" Name="modName"/>
                    <Button Content="Select" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Padding="4,1" Click="Select_Mod_Button_Click"/>
                    <Label Content="No File Selected" HorizontalAlignment="Left" Margin="56,49,0,0" VerticalAlignment="Top" Width="730" Name="modPath" Background="Transparent" Foreground="#FF8C8C8C"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tags" IsEnabled="False"/>
            <TabItem Header="Provinces" IsEnabled="False"/>
            <TabItem Header="History" IsEnabled="False"/>
            <TabItem Header="Events" IsEnabled="False"/>
        </TabControl>

    </Grid>
</Window>
