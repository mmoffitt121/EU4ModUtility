<Window x:Class="EU4ModUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EU4ModUtil"
        mc:Ignorable="d"
        Title="MainWindow" Height="932" Width="1791">
    <Grid>
        <Grid.DataContext>
            <local:ViewModel/>
        </Grid.DataContext>
        <TabControl>
            <!--#####
            ## MOD ##
            ######-->
            <TabItem Header="Mod">
                <Grid Background="#FFE5E5E5">
                    <Label Content="No Mod Selected" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Width="774" Name="modName" Grid.ColumnSpan="2"/>
                    <Button Content="Select" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Padding="4,1" Click="Select_Mod_Button_Click"/>
                    <Label Content="No File Selected" HorizontalAlignment="Left" Margin="56,49,0,0" VerticalAlignment="Top" Width="730" Name="modPath" Background="Transparent" Foreground="#FF8C8C8C" Grid.ColumnSpan="2"/>
                    <Grid Margin="10,102,10,10" Grid.ColumnSpan="2" Name="descriptorDisplay">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <ListBox Name="tagListBox" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="3" Margin="2,2,2,2" Grid.Row="0"/>
                        <ListBox Name="replacePathsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="3" Margin="2,2,2,2" Grid.Row="1"/>
                        <Label Grid.Column="2" Grid.Row="0" Content="Tags" HorizontalAlignment="Right" Margin="5,5,5,5" VerticalAlignment="Top"/>
                        <Label Grid.Column="2" Grid.Row="1" Content="Replace Paths" HorizontalAlignment="Right" Margin="5,5,5,5" VerticalAlignment="Top"/>
                        <Image Name="thumbnail" Grid.Column="0" HorizontalAlignment="Left" Height="170" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Grid.RowSpan="2"/>
                        <TextBlock Name="versionInfo" Grid.Column="1" HorizontalAlignment="Left" Margin="4,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.RowSpan="2" Height="279" Width="179"><Run Text="Version: x.x.x"/><LineBreak/><Run Text="Game Version: x.x.x"/><LineBreak/><Run/></TextBlock>
                    </Grid>
                </Grid>
            </TabItem>
            <!--###########
            ## COUNTRIES ##
            ############-->
            <TabItem Name="countriesTab" Header="Countries" IsEnabled="False">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <DataGrid Name="countryDataGrid" ItemsSource="{Binding Path=Countries, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Grid.RowSpan="4">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="#">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Index}"
                                            TextWrapping="Wrap"
                                            Padding="2" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Tag" Binding="{Binding Path=Tag, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Path=LocalizedName, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Adjective" Binding="{Binding Path=LocalizedAdjective, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path=Path, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTemplateColumn Header="Color">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Background="{Binding Path=BGColor}"
                                            TextWrapping="Wrap"
                                            Padding="4" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="R      " Binding="{Binding Path=R, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="G      " Binding="{Binding Path=G, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="B      " Binding="{Binding Path=B, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTemplateColumn Header="Rev 1">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Path=R1, UpdateSourceTrigger=PropertyChanged}"
                                            Background="{Binding Path=BGColorR1, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            Padding="4" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Rev 2">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Path=R2, UpdateSourceTrigger=PropertyChanged}"
                                            Background="{Binding Path=BGColorR2, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            Padding="4" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Rev 3">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Path=R3, UpdateSourceTrigger=PropertyChanged}"
                                            Background="{Binding Path=BGColorR3, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            Padding="4" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Historical Score" Binding="{Binding Path=HistoricalScore, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Culture" Binding="{Binding Path=Culture, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Religion" Binding="{Binding Path=Religion, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Government" Binding="{Binding Path=Government, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Graphical Culture" Binding="{Binding Path=GraphicalCulture, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Tech Group" Binding="{Binding Path=TechnologyGroup, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Unit Type" Binding="{Binding Path=UnitType, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Capital" Binding="{Binding Path=Capital, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="1">
                        <Button Content=" Save " HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Click="SaveCountries"/>
                        <Button Content=" Reload " HorizontalAlignment="Right" Margin="0,10,50,0" VerticalAlignment="Top"/>
                        <Button Grid.Column="1" Content=" Add " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="NewCountry"/>
                        <Button Content=" Delete " HorizontalAlignment="Left" Margin="47,10,0,0" VerticalAlignment="Top" Click="DeleteCountry"/>
                    </Grid>
                </Grid>
            </TabItem>
            <!--###########
            ## PROVINCES ##
            ###########-->
            <TabItem Name="provincesTab" Header="Provinces" IsEnabled="False"/>
        </TabControl>

    </Grid>
</Window>
